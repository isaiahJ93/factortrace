  private addAssuranceReadiness(pdf: jsPDF, data: PDFExportData, startY: number): number {
    let currentY = startY;
    
    pdf.setFontSize(14);
    pdf.setTextColor(26, 26, 46);
    pdf.text('Assurance Readiness', 20, currentY);
    currentY += 10;
    
