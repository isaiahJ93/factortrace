        }}>
          <h3 style={{ fontSize: '1.125rem', fontWeight: '600', color: '#0f172a', marginBottom: '1rem' }}>
            Data Quality Analysis
          </h3>
          
          <div style={{ display: 'flex', flexDirection: 'column', gap: '1rem' }}>
            {dataQualityMetrics.map(metric => (
              <div key={metric.category}>
                <div style={{ display: 'flex', alignItems: 'center', justifyContent: 'space-between', marginBottom: '0.5rem' }}>
                  <span style={{ fontSize: '0.875rem', fontWeight: '500', color: '#1e293b' }}>
                    {metric.category}
                  </span>
                  <div style={{ display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
                    <span style={{ fontSize: '0.875rem', fontWeight: '600', color: metric.color }}>
                      {metric.score}%
                    </span>
                    <span style={{ fontSize: '0.75rem', color: '#64748b' }}>
                      / {metric.target}%
                    </span>
                  </div>
                </div>
                <div style={{ position: 'relative' }}>
                  <div style={{ 
                    width: '100%', 
                    background: '#e5e7eb', 
                    borderRadius: '9999px', 
                    height: '0.75rem',
                    overflow: 'hidden'
                  }}>
                    <div
                      style={{ 
                        height: '0.75rem',
                        borderRadius: '9999px',
                        transition: 'width 0.5s',
                        width: `${metric.score}%`,
                        background: `linear-gradient(90deg, ${metric.color}cc 0%, ${metric.color} 100%)`
                      }}
                    />
                    {/* Target marker */}
                    <div style={{
                      position: 'absolute',
                      top: '-0.125rem',
                      left: `${metric.target}%`,
                      width: '0.125rem',
                      height: '1rem',
                      background: '#1e293b',
                      transform: 'translateX(-50%)'
                    }} />
                  </div>
                </div>
              </div>
            ))}
          </div>
          
          {/* Quality improvement suggestion */}
          <div style={{ 
            marginTop: '1.5rem', 
            padding: '1rem', 
            background: 'linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%)', 
            borderRadius: '0.5rem',
            border: '1px solid #bbf7d0'
          }}>
            <div style={{ display: 'flex', alignItems: 'flex-start', gap: '0.5rem' }}>
              <AlertCircle style={{ width: '1.25rem', height: '1.25rem', color: '#059669', marginTop: '0.125rem' }} />
              <div>
                <p style={{ fontSize: '0.875rem', fontWeight: '600', color: '#047857' }}>
                  Improve Data Quality
                </p>
                <p style={{ fontSize: '0.75rem', color: '#059669', marginTop: '0.25rem' }}>
                  Replace 15% of estimates with primary data to reach 90% quality score
                </p>
                <button style={{
                  marginTop: '0.5rem',
                  fontSize: '0.75rem',
                  color: '#047857',
                  background: 'none',
                  border: 'none',
                  cursor: 'pointer',
                  display: 'flex',
                  alignItems: 'center',
                  gap: '0.25rem',
                  fontWeight: '500'
                }}>
                  View recommendations
                  <ChevronRight style={{ width: '0.875rem', height: '0.875rem' }} />
                </button>
              </div>
            </div>
          </div>
        </div>

        {/* Enhanced Material Categories */}
        <div style={{ 
          background: 'white', 
          borderRadius: '1rem', 
          padding: '1.5rem', 
          boxShadow: '0 4px 6px -1px rgba(0, 0, 0, 0.1)',
          border: '1px solid rgba(0, 0, 0, 0.05)',
          gridColumn: 'span 2'
        }}>
          <div style={{ display: 'flex', alignItems: 'center', justifyContent: 'space-between', marginBottom: '1rem' }}>
            <h3 style={{ fontSize: '1.125rem', fontWeight: '600', color: '#0f172a' }}>
              Emission Categories Performance
            </h3>
            <button style={{
              padding: '0.375rem 0.75rem',
              fontSize: '0.875rem',
              background: 'linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%)',
              border: 'none',
              borderRadius: '0.5rem',
              cursor: 'pointer',
              fontWeight: '500'
            }}>
              View All Categories
            </button>
          </div>
          
          <div style={{ display: 'flex', flexDirection: 'column', gap: '0.75rem' }}>
            {materialCategories.map((category, index) => (
              <div 
                key={category.name} 
                style={{ 
                  display: 'flex', 
                  alignItems: 'center', 
                  justifyContent: 'space-between', 
                  padding: '1rem', 
                  background: index === 0 
                    ? 'linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%)' 
                    : '#f9fafb', 
                  borderRadius: '0.75rem',
                  cursor: 'pointer',
                  transition: 'all 0.2s',
                  border: index === 0 ? '1px solid #bbf7d0' : '1px solid transparent'
                }}
                onMouseEnter={(e) => {
                  if (index !== 0) {
                    e.currentTarget.style.background = '#f3f4f6';
                    e.currentTarget.style.transform = 'translateX(4px)';
                  }
                }}
                onMouseLeave={(e) => {
                  if (index !== 0) {
                    e.currentTarget.style.background = '#f9fafb';
                    e.currentTarget.style.transform = 'translateX(0)';
                  }
                }}
              >
                <div style={{ flex: 1 }}>
                  <div style={{ display: 'flex', alignItems: 'center', gap: '0.75rem' }}>
                    <h4 style={{ fontWeight: '600', color: '#0f172a', fontSize: '0.9375rem' }}>
                      {category.name}
                    </h4>
                    {index === 0 && (
                      <span style={{
                        fontSize: '0.75rem',
                        padding: '0.125rem 0.5rem',
                        background: '#10b981',
                        color: 'white',
                        borderRadius: '9999px',
                        fontWeight: '500'
                      }}>
                        Top contributor
                      </span>
                    )}
                  </div>
                  <div style={{ display: 'flex', alignItems: 'center', gap: '1.5rem', marginTop: '0.5rem' }}>
                    <div style={{ display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
                      <span style={{ fontSize: '1.125rem', fontWeight: '600', color: '#0f172a' }}>
                        {category.emissions}
                      </span>
                      <span style={{ fontSize: '0.875rem', color: '#64748b' }}>tCO₂e</span>
                    </div>
                    <div style={{ display: 'flex', alignItems: 'center', gap: '0.375rem' }}>
                      <Gauge style={{ width: '0.875rem', height: '0.875rem', color: '#6b7280' }} />
                      <span style={{ fontSize: '0.875rem', color: '#64748b' }}>
                        Quality: {category.quality}%
                      </span>
                    </div>
                    <div style={{ fontSize: '0.875rem', color: '#64748b' }}>
                      {category.subcategories} subcategories
                    </div>
                  </div>
                </div>
                <div style={{ display: 'flex', alignItems: 'center', gap: '1rem' }}>
                  <span style={{ 
                    fontSize: '0.9375rem', 
                    fontWeight: '600',
                    color: category.trend.startsWith('+') ? '#dc2626' : '#059669',
                    display: 'flex',
                    alignItems: 'center',
                    gap: '0.25rem'
                  }}>
                    {category.trend.startsWith('+') ? (
                      <ArrowUpRight style={{ width: '1rem', height: '1rem' }} />
                    ) : (
                      <ArrowDownRight style={{ width: '1rem', height: '1rem' }} />
                    )}
                    {category.trend}
                  </span>
                  <ChevronRight style={{ width: '1.25rem', height: '1.25rem', color: '#94a3b8' }} />
                </div>
              </div>
            ))}
          </div>
        </div>

        {/* Enhanced Compliance Status */}
        <div style={{ 
          background: 'white', 
          borderRadius: '1rem', 
          padding: '1.5rem', 
          boxShadow: '0 4px 6px -1px rgba(0, 0, 0, 0.1)',
          border: '1px solid rgba(0, 0, 0, 0.05)'
        }}>
          <h3 style={{ fontSize: '1.125rem', fontWeight: '600', color: '#0f172a', marginBottom: '1rem' }}>
            Compliance Tracker
          </h3>
          
          <div style={{ display: 'flex', flexDirection: 'column', gap: '1rem' }}>
            {complianceStatus.map(item => (
              <div key={item.standard} style={{ 
                padding: '0.75rem',
                background: item.progress === 100 ? '#f0fdf4' : '#f9fafb',
                borderRadius: '0.5rem',
                border: item.progress === 100 ? '1px solid #bbf7d0' : '1px solid transparent'
              }}>
                <div style={{ display: 'flex', alignItems: 'center', justifyContent: 'space-between', marginBottom: '0.5rem' }}>
                  <div>
                    <span style={{ fontSize: '0.875rem', fontWeight: '600', color: '#1e293b' }}>
                      {item.standard}
                    </span>
                    <span style={{ 
                      marginLeft: '0.5rem',
                      fontSize: '0.75rem', 
                      padding: '0.125rem 0.5rem', 
                      borderRadius: '9999px',
                      background: item.status === 'Compliant' ? '#10b981' : item.status === 'In Progress' ? '#3b82f6' : '#6b7280',
                      color: 'white',
                      fontWeight: '500'
                    }}>
                      {item.status}
                    </span>
                  </div>
                  <span style={{ fontSize: '0.75rem', color: '#64748b' }}>
                    
                  </span>
                </div>
                <div style={{ position: 'relative' }}>
                  <div style={{ 
                    width: '100%', 
                    background: '#e5e7eb', 
                    borderRadius: '9999px', 
                    height: '0.5rem',
                    overflow: 'hidden'
                  }}>
                    <div
                      style={{ 
                        height: '0.5rem',
                        borderRadius: '9999px',
                        transition: 'width 0.5s',
                        background: item.progress === 100 
                          ? 'linear-gradient(90deg, #10b981 0%, #059669 100%)' 
                          : 'linear-gradient(90deg, #3b82f6 0%, #2563eb 100%)',
                        width: `${item.progress}%`
                      }}
                    />
                  </div>
                  <span style={{
                    position: 'absolute',
                    right: '0',
                    top: '-1.25rem',
                    fontSize: '0.75rem',
                    fontWeight: '600',
                    color: item.progress === 100 ? '#059669' : '#3b82f6'
                  }}>
                    {item.progress}%
                  </span>
                </div>
              </div>
            ))}
          </div>
          
          <button style={{ 
            marginTop: '1rem', 
            width: '100%', 
            padding: '0.75rem', 
            background: 'linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%)', 
            color: '#1e40af', 
            border: 'none',
            borderRadius: '0.5rem',
            cursor: 'pointer',
            fontSize: '0.875rem',
            fontWeight: '600',
            transition: 'all 0.2s',
            display: 'flex',
            alignItems: 'center',
            justifyContent: 'center',
            gap: '0.5rem'
          }}>
            <FileText style={{ width: '1rem', height: '1rem' }} />
            View Compliance Report
          </button>
        </div>
      </div>

      {/* Enhanced Action Bar */}
      <div style={{ 
        marginTop: '2rem', 
        background: 'linear-gradient(135deg, #059669 0%, #047857 100%)', 
        borderRadius: '1rem', 
        padding: '2rem', 
        color: 'white',
        position: 'relative',
        overflow: 'hidden'
      }}>
        <div style={{
          position: 'absolute',
          top: '-4rem',
          right: '-4rem',
          width: '12rem',
          height: '12rem',
          background: 'radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%)',
          borderRadius: '50%'
        }} />
        
        <div style={{ display: 'flex', alignItems: 'center', justifyContent: 'space-between', position: 'relative' }}>
          <div>
            <h3 style={{ fontSize: '1.5rem', fontWeight: '700', marginBottom: '0.5rem' }}>
              Ready to generate your XBRL report?
            </h3>
            <p style={{ color: '#d1fae5', fontSize: '1rem' }}>
              All required data points collected with {animatedQuality.toFixed(0)}% average quality score
            </p>
            <div style={{ marginTop: '1rem', display: 'flex', gap: '1rem' }}>
              <div style={{ display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
                <CheckCircle style={{ width: '1.25rem', height: '1.25rem', color: '#10b981' }} />
                <span style={{ fontSize: '0.875rem' }}>CSRD Compliant</span>
              </div>
              <div style={{ display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
                <CheckCircle style={{ width: '1.25rem', height: '1.25rem', color: '#10b981' }} />
                <span style={{ fontSize: '0.875rem' }}>Audit Ready</span>
              </div>
              <div style={{ display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
                <CheckCircle style={{ width: '1.25rem', height: '1.25rem', color: '#10b981' }} />
                <span style={{ fontSize: '0.875rem' }}>Real-time Data</span>
              </div>
            </div>
          </div>
          <button 
            onClick={handleGenerateXBRL}
            style={{ 
              padding: '1rem 2rem', 
              background: 'white', 
              color: '#047857', 
              border: 'none',
              borderRadius: '0.5rem',
              cursor: 'pointer',
              fontWeight: '600',
              fontSize: '1rem',
              display: 'flex',
              alignItems: 'center',
              gap: '0.5rem',
              transition: 'all 0.2s',
              boxShadow: '0 4px 6px -1px rgba(0, 0, 0, 0.1)'
            }}
            onMouseEnter={(e) => {
              e.currentTarget.style.transform = 'translateY(-2px)';
              e.currentTarget.style.boxShadow = '0 10px 15px -3px rgba(0, 0, 0, 0.1)';
            }}
            onMouseLeave={(e) => {
              e.currentTarget.style.transform = 'translateY(0)';
              e.currentTarget.style.boxShadow = '0 4px 6px -1px rgba(0, 0, 0, 0.1)';
            }}
          >
            <Download style={{ width: '1.25rem', height: '1.25rem' }} />
            Generate XBRL Voucher
          </button>
        </div>
      </div>

      <style jsx>{`
        @keyframes spin {
          from { transform: rotate(0deg); }
          to { transform: rotate(360deg); }
        }
      `}</style>
    </div>
  );
};

export default FactorTraceDashboard;