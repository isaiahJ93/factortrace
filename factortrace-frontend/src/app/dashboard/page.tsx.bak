// Enhanced animation hook with spring physics
const useSpringValue = (targetValue, duration = 2000) => {
  const [value, setValue] = useState(0);
  
  useEffect(() => {
    const startTime = Date.now();
    const startValue = value;
    const diff = targetValue - startValue;
    
    const animate = () => {
      const elapsed = Date.now() - startTime;
      const progress = Math.min(elapsed / duration, 1);
      
      // Easing function for smooth animation
      const easeOutExpo = 1 - Math.pow(2, -10 * progress);
      
      setValue(startValue + diff * easeOutExpo);
      
      if (progress < 1) {
        requestAnimationFrame(animate);
      }
    };
    
    requestAnimationFrame(animate);
  }, [targetValue]);
  
  return value;
};

// Custom tooltip with glassmorphism
const CustomTooltip = ({ active, payload, label }) => {
  if (active && payload && payload.length) {
    return (
      <div style={{
        background: 'rgba(255, 255, 255, 0.95)',
        backdropFilter: 'blur(10px)',
        border: '1px solid rgba(0, 0, 0, 0.1)',
        borderRadius: '0.5rem',
        padding: '0.75rem',
        boxShadow: '0 4px 6px -1px rgba(0, 0, 0, 0.1)'
      }}>
        <p style={{ fontSize: '0.875rem', fontWeight: '600', marginBottom: '0.5rem' }}>{label}</p>
        {payload.map((entry, index) => (
          <p key={index} style={{ fontSize: '0.875rem', color: entry.color }}>
            {entry.name}: {entry.value.toFixed(2)} tCO₂e
          </p>
        ))}
      </div>
    );
  }
  return null;
};

// Performance indicator component
const PerformanceIndicator = ({ value, previousValue, format = 'percent' }) => {
  const change = ((value - previousValue) / previousValue) * 100;
  const isPositive = change > 0;
  const color = isPositive ? '#dc2626' : '#059669'; // Red for increase, green for decrease in emissions
  
  return (
    <div style={{ display: 'flex', alignItems: 'center', fontSize: '0.875rem' }}>
      {isPositive ? (
        <ArrowUpRight style={{ width: '1rem', height: '1rem', color, marginRight: '0.25rem' }} />
      ) : (
        <ArrowDownRight style={{ width: '1rem', height: '1rem', color, marginRight: '0.25rem' }} />
      )}
      <span style={{ color, fontWeight: '500' }}>
        {Math.abs(change).toFixed(1)}% vs last {format === 'month' ? 'month' : 'year'}
      </span>
    </div>
  );
};

