<!-- voucher-calculation.xml -->
<?xml version="1.0" encoding="UTF-8"?>
<link:linkbase 
    xmlns:link="http://www.xbrl.org/2003/linkbase"
    xmlns:xlink="http://www.w3.org/1999/xlink"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.xbrl.org/2003/linkbase http://www.xbrl.org/2003/xbrl-linkbase-2003-12-31.xsd">
  
  <link:calculationLink xlink:type="extended" xlink:role="http://www.xbrl.org/2003/role/link">
    <!-- Calculation relationships -->
    <link:loc xlink:type="locator" xlink:href="voucher.xsd#total_co2e" xlink:label="total"/>
    <link:loc xlink:type="locator" xlink:href="voucher.xsd#quantity" xlink:label="quantity"/>
    <link:loc xlink:type="locator" xlink:href="voucher.xsd#emission_factor" xlink:label="factor"/>
    
    <link:calculationArc xlink:type="arc" 
                         xlink:arcrole="http://www.xbrl.org/2003/arcrole/summation-item"
                         xlink:from="total" xlink:to="quantity" weight="1" order="1"/>
    <link:calculationArc xlink:type="arc" 
                         xlink:arcrole="http://www.xbrl.org/2003/arcrole/summation-item"
                         xlink:from="total" xlink:to="factor" weight="1" order="2"/>
  </link:calculationLink>
  
</link:linkbase>
